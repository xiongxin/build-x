<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiongxin.app.springsecuritydemo.mapper.SysUserMapper">
    <cache
            eviction="LRU"
            flushInterval="60000"
            size="1024"
            readOnly="true"/>

    <resultMap id="sysUserMap" type="com.xiongxin.app.springsecuritydemo.model.SysUser">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        
        <collection property="roles" ofType="com.xiongxin.app.springsecuritydemo.model.SysRole">
            <result column="name" property="name" />
        </collection>
    </resultMap>
    <insert id="save">
        insert sys_user  (username, password) values (#{username}, #{password})
    </insert>

    <select id="findByUsername" resultMap="sysUserMap">
        select u.*
        ,r.name
        from sys_user u
        LEFT JOIN sys_role_user sru on u.id= sru.sys_user_id
        LEFT JOIN sys_role r on sru.sys_role_id=r.id
        where username= #{username}
    </select>
</mapper>