<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiongxin.app.springsecuritydemo.mapper.SysPermissionMapper">
    <cache
            eviction="LRU"
            flushInterval="60000"
            size="1024"
            readOnly="true"/>


    <select id="findAll" resultType="com.xiongxin.app.springsecuritydemo.model.SysPermission">
        select * from sys_permission
    </select>

    <select id="findByAdminUserId" resultType="com.xiongxin.app.springsecuritydemo.model.SysPermission">
        select p.*
        from sys_user u
        LEFT JOIN sys_role_user sru on u.id= sru.sys_user_id # 获取当前用户的角色
        LEFT JOIN sys_role r on sru.Sys_Role_id=r.id
        LEFT JOIN sys_permission_role spr on spr.role_id=r.id
        LEFT JOIN sys_permission p on p.id =spr.permission_id
        where u.id = #{userId}
    </select>

</mapper>